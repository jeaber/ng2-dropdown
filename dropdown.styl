@import 'jeet'
@import '../../../assets/css/theme'

.dropdown
  .dropdown-menu
    position absolute
    z-index 100
    padding 0
    margin 0
    display none
    li
      background white
      border-bottom lightgrey thin solid
      margin 0
      opacity 0
      font-family font-body
      list-style none
      overflow hidden
      display block
      line-height normal
      transition(time:.3s, ease:ease-in)
      a
        color grey
        padding 14px 42px
        display block
        font-weight 400
    li:hover a
      color color-secondary
.dropdown:hover
  .dropdown-menu
    display block
    li
      opacity 1
